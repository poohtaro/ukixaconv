#!/usr/bin/ruby
# u2a_tatechuyoko
s = ""
while c = STDIN.getc
  cc = c.ord
  if cc > 255 || cc == 0x0A then
    rl = s.length
    if rl > 0 then
      if rl < 2 || rl > 2 then #文字の連続数を判定
        pre = ""
        post = ""
      else
        pre = "［＃縦中横］"
        post = "［＃縦中横終わり］"
        if /^ .*/ =~ s then
          pre = " " + pre
        end
        if /.* $/ =~ s then
          post = post + " "
        end
        s.strip!
      end
      $stdout << pre << s << post
      s = ""
    end
    $stdout << c
  else
    s = s + c
  end
end
